
@{
    ViewBag.Title = "Projects";
}



<head>
    <title>Projects</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <link href='https://fonts.googleapis.com/css?family=Satisfy' rel='stylesheet' type='text/css'>
       <style>

           h1{
               font-family: 'Satisfy', cursive;
           }
           body {
    overflow: visible;
}
       </style>
</head>

    <body>
        <div class="row" style="background-color:lightgray;">
            <div class="col-md-5">
                    <img src="~/Content/Images/stephtoon2.png" style="width:500px;"/> 
            </div><!--col-5-->
            <div class="col-md-7"><!--block of text-->

                <h1 style="font-weight:900; font-size:60px;">Checkout my projects!</h1>
            <br />
            
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                       
                    </ol>

                    <!-- Wrapper for slides -->
                      

                    <div class="carousel-inner" role="listbox">
                        <div class="item active">

                            <img src="~/Content/Images/Flashdouble.jpg" style="height:350px;"/>
                            
                            <div class="carousel-caption">
                                <a href="http://flashdouble.toribeth.com/"target="_blank">FlashDouble</a>
                            </div>
                            
                        </div>

                        <div class="item">

                            <img src="~/Content/Images/Movie.jpg" />
                            <div class="carousel-caption">
                                <a href="https://github.com/sgandy3/Movie/blob/master/Stuff.sln" target="_blank">Movie Rental</a>
                                </div>
                            </div>

                        <div class="item">
                            <img src="~/Content/Images/FizzBuzz.jpg" />
                            <div class="carousel-caption">
                                <a href="https://github.com/sgandy3/FizzBuzz/blob/master/FizzBuzz.sln"target="_blank">FizzBuzz</a>
                                </div>
                            </div>
                        </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                
            
            
            </div><!--col-7-->
       </div>
            </div>
</body>